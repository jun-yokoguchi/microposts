<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <h1>Followings (<%= @user.following_relationships.count %>)</h1>
  <div class="col-md-8">
    <% if @user.following_relationships.any? %>
      <% @following_users.each do |user| %>
        <%= user.name %>
        <%= user.id %>
      <% end %>
    <% end %>
  </div>
  